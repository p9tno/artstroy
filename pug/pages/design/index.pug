                span.kb_sep

                span.kb_title Дизайн-проектирование
    // end breadcrumbs

    // begin head
    section#head.head.head_design.section(style="background-image: url('../../img/design_bg.webp')").bg.lines
        .lines__wrap
            .lines__list
                span
                span
                span
                span
                span

        .container_center.container_center_right

            .head__content
                .head__left
                    .head__subtitle.mb20
                        span По всей России 

                    h1.head__title.mb22
