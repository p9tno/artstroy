                    .details__preview.bg(style="background-image: url('../../img/details_"+item+".jpg')")
                        .details__plus(style="top: 37%; left: 60%;")
                            .details__icon
                                i.icon_plus

                            .details__pop
                                .pop
                                    .pop__content
                                        span Lorem ipsum dolor sit amet, consectetur adipisicing elit
